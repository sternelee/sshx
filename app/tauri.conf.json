{
  "productName": "sshx",
  "version": "0.1.0",
  "identifier": "com.sshx.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173/app",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "sshx - Secure Collaborative Terminal",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "url": "/app"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "shortDescription": "A secure web-based, collaborative terminal",
    "longDescription": "sshx is a secure, fast, and collaborative terminal sharing tool that works seamlessly across different platforms.",
    "resources": [],
    "copyright": "Copyright Â© 2024 sshx contributors",
    "category": "DeveloperTool",
    "externalBin": [],
    "linux": {},
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": ""
    },
    "windows": {}
  },
  "plugins": {
    "cli": {
      "description": "A secure collaborative terminal",
      "args": [
        {
          "name": "session",
          "short": "s",
          "description": "Join a session with the given ticket",
          "takesValue": true
        },
        {
          "name": "create",
          "short": "c",
          "description": "Create a new session",
          "takesValue": false
        }
      ]
    }
  }
}
